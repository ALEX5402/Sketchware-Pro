<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="64.0dip"
    android:layout_marginLeft="4.0dip"
    android:layout_marginTop="2.0dip"
    android:layout_marginRight="4.0dip"
    android:layout_marginBottom="2.0dip"
    android:background="@color/transparent"
    android:elevation="4.0dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chk_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:contentDescription="@null" />

        <LinearLayout
            android:id="@+id/delete_img_container"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="12.0dip"
            android:alpha="0.8"
            android:background="@drawable/circle_bg_dark_grey_alpha"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="18.0dip"
                android:layout_height="18.0dip"
                android:layout_gravity="center"
                android:src="@drawable/ic_trashcan_white_48dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_activity"
                android:layout_width="48.0dip"
                android:layout_height="52.0dip"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginBottom="8.0dip"
                android:background="#fff6f6f6"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_marginRight="16.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_screen_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2.0dip"
                    android:textColor="#ff404040"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/tv_activity_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff9a9a9a"
                    android:textSize="15.0sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_preset_setting"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:layout_marginRight="16.0dip"
                android:src="@drawable/ic_detail_setting_48dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>